ldren":[{"type":"text","value":"Worst use cases:","position":{"start":{"line":9,"column":1},"end":{"line":9,"column":1}},"key":"rHEqfZjfMI"}],"key":"JmHtViljY5"},{"type":"text","value":" real applications, shared codebases, or anything you expect to maintain. Inline handlers get messy fast, duplicate logic, and blur separation of concerns. It’s also harder to refactor because your behavior is scattered across markup.","position":{"start":{"line":9,"column":1},"end":{"line":9,"column":1}},"key":"vuUYcnyJT1"}],"key":"LLOh2D6o1k"},{"type":"code","lang":"html","value":"<!DOCTYPE html>\n<!--\n  This document demonstrates using INLINE event handlers.\n  Each input triggers a JavaScript function that logs\n  user interaction directly to the DOM.\n-->\n\n<head>\n  <!-- Page title shown in the browser tab -->\n  <title>Input types</title>\n\n  <style>\n    /*\n      Simple container styling to center the demo\n      and make it visually distinct from the page background\n    */\n    .div1 {\n      width: 75%;\n      background-color: cornsilk;\n      padding: 25px;\n      margin-left: auto;\n      margin-right: auto;\n      margin-top: 50px;\n      margin-bottom: 50px;\n    }\n  </style>\n</head>\n\n<body>\n\n  <!-- Main demo container -->\n  <div class=\"div1\">\n\n    <!-- Page heading -->\n    <h1>HTML Input Types – DOM Logging</h1>\n    <p>Every interaction is logged below.</p>\n\n    <!--\n      Log area:\n      JavaScript dynamically inserts messages here\n      instead of using console.log()\n    -->\n    <div id=\"log\" style=\"border:1px solid #444; \n      padding:10px; \n      height:200px; \n      overflow-y:auto; \n      margin-bottom: 20px;\n      background:#f9f9f9;\">\n    </div>\n\n    <!--\n      Demo form:\n      Inline handlers call JavaScript functions on input.\n    -->\n    <form id=\"demoForm\">\n      <table>\n\n        <!-- First Name input (fires on every keystroke) -->\n        <tr>\n          <td><label for=\"firstName\">First Name:</label></td>\n          <td><input type=\"text\" id=\"firstName\" oninput=\"handleFirstName(this.value)\"></td>\n        </tr>\n\n        <!-- Last Name input (fires on every keystroke) -->\n        <tr>\n          <td><label for=\"lastName\">Last Name:</label></td>\n          <td><input type=\"text\" id=\"lastName\" oninput=\"handleLastName(this.value)\"></td>\n        </tr>\n\n        <!-- Form control buttons (use <button> to keep the focus on input fields) -->\n        <tr>\n          <td colspan=\"2\" style=\"text-align: center;\">\n            <button type=\"button\" onclick=\"handleButton()\">Button</button>\n            <button type=\"reset\">Reset</button>\n            <button type=\"submit\">Submit</button>\n          </td>\n        </tr>\n\n      </table>\n    </form>\n  </div>\n\n  <script>\n    /*\n      Core logging function.\n      Appends messages to the log div and auto-scrolls.\n    */\n    function log(message) {\n\n      // Clear log when the form is reset\n      if (message === \"Form reset\") {\n        document.getElementById(\"log\").innerHTML = \"\";\n      }\n\n      const logDiv = document.getElementById(\"log\");\n      const entry = document.createElement(\"div\");\n      entry.textContent = message;\n      logDiv.appendChild(entry);\n\n      // Keep newest log entry visible\n      logDiv.scrollTop = logDiv.scrollHeight;\n    }\n\n    // Inline handlers for the two input fields\n    function handleFirstName(value) { log(\"First Name: \" + value); }\n    function handleLastName(value) { log(\"Last Name: \" + value); }\n\n    function handleButton() { log(\"Button clicked\"); }\n\n    function handleReset() { log(\"Form reset\"); }\n\n    /*\n      Form submission handler.\n      Prevents actual submission and logs completion.\n    */\n    document.getElementById(\"demoForm\").onsubmit = function (e) {\n      e.preventDefault();\n      log(\"Form submitted\");\n    };\n\n    // Reset event (so the log clears when the reset button is used)\n    document.getElementById(\"demoForm\").onreset = function () {\n      log(\"Form reset\");\n    };\n  </script>\n\n</body>","position":{"start":{"line":12,"column":1},"end":{"line":140,"column":1}},"key":"zTKc7Ro6Ki"},{"type":"heading","depth":2,"position":{"start":{"line":142,"column":1},"end":{"line":142,"column":1}},"children":[{"type":"text","value":"Using Listeners (addEventListener)","position":{"start":{"line":142,"column":1},"end":{"line":142,"column":1}},"key":"k9ABPZgw65"}],"identifier":"using-listeners-addeventlistener","label":"Using Listeners (addEventListener)","html_id":"using-listeners-addeventlistener","implicit":true,"key":"zMdkNAtBAD"},{"type":"paragraph","position":{"start":{"line":144,"column":1},"end":{"line":144,"column":1}},"children":[{"type":"text","value":"In the ","position":{"start":{"line":144,"column":1},"end":{"line":144,"column":1}},"key":"NIku2AfU3j"},{"type":"strong","position":{"start":{"line":144,"column":1},"end":{"line":144,"column":1}},"children":[{"type":"text","value":"Listeners","position":{"start":{"line":144,"column":1},"end":{"line":144,"column":1}},"key":"pFUT92sbuK"}],"key":"cflfJSYjfa"},{"type":"text","value":" version, the HTML stays clean and JavaScript does the wiring with ","position":{"start":{"line":144,"column":1},"end":{"line":144,"column":1}},"key":"R4kpLAS3MU"},{"type":"inlineCode","value":"addEventListener","position":{"start":{"line":144,"column":1},"end":{"line":144,"column":1}},"key":"WuLM1xbpbx"},{"type":"text","value":". This is the “grown-up” baseline: structure in HTML, behavior in JS. It also avoids common inline pitfalls like mixing quoting rules, creating hidden dependencies, and accidentally triggering code before the DOM is ready.","position":{"start":{"line":144,"column":1},"end":{"line":144,"column":1}},"key":"CDavF5auoa"}],"key":"N5By9RnQL0"},{"type":"paragraph","position":{"start":{"line":146,"column":1},"end":{"line":147,"column":1}},"children":[{"type":"strong","position":{"start":{"line":146,"colu