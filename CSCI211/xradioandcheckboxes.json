kground-color: cornsilk;\n      margin: 50px auto;\n      padding: 20px;\n    }\n  </style>\n</head>\n\n<body>\n  <div class=\"div1\">\n    <h1>Radio Buttons</h1>\n\n    <input type=\"radio\" id=\"rad1\" name=\"grp1\" value=\"10\" />\n    <label for=\"rad1\">Option 1</label><br />\n\n    <input type=\"radio\" id=\"rad2\" name=\"grp1\" value=\"20\" checked />\n    <label for=\"rad2\">Option 2</label><br />\n\n    <input type=\"radio\" id=\"rad3\" name=\"grp1\" value=\"30\" />\n    <label for=\"rad3\">Option 3</label><br />\n\n    <br />\n    <hr />\n    <br />\n\n    <h1>Check Boxes</h1>\n\n    <input type=\"checkbox\" id=\"cb1\" name=\"grp1\" value=\"11\" />\n    <label for=\"cb1\">check box 1</label><br />\n\n    <input type=\"checkbox\" id=\"cb2\" name=\"grp1\" value=\"22\" />\n    <label for=\"cb2\">check box 2</label><br />\n\n    <input type=\"checkbox\" id=\"cb3\" name=\"grp1\" value=\"33\" />\n    <label for=\"cb3\">check box 3</label><br /><br />\n\n    <input type=\"button\" value=\"Show selected checkboxes\" onclick=\"checkboxCheck()\" />\n\n    <br /><br />\n    <hr />\n    <br />\n\n    <p id=\"radioMess\"></p>\n    <p id=\"checkMess\"></p>\n  </div>\n\n  <script>\n    function updateRadioMessage() {\n      const selected = document.querySelector('input[name=\"grp1\"]:checked');\n      const radioOut = document.getElementById(\"radioMess\");\n\n      if (!selected) {\n        radioOut.textContent = \"No radio option selected.\";\n        return;\n      }\n\n      let message;\n      if (selected.value === \"10\") message = \"rad1 selected (value 10)\";\n      else if (selected.value === \"20\") message = \"rad2 selected (value 20)\";\n      else message = \"rad3 selected (value 30)\";\n\n      radioOut.textContent = message;\n    }\n\n    function checkboxCheck() {\n      const checkedBoxes = document.querySelectorAll('input[type=\"checkbox\"]:checked');\n      console.log(checkedBoxes);\n\n      const checkOut = document.getElementById(\"checkMess\");\n\n      if (checkedBoxes.length === 0) {\n        checkOut.textContent = \"No checkboxes selected.\";\n        return;\n      }\n\n      let message = \"Checked: \";\n\n      for (let i = 0; i < checkedBoxes.length; i++) {\n        const cb = checkedBoxes[i];\n\n        const label = document.querySelector('label[for=\"' + cb.id + '\"]');\n\n        let labelText;\n        if (label) {\n          labelText = label.textContent.trim();\n        } else {\n          labelText = cb.id;\n        }\n\n        if (i > 0) {\n          message += \", \";\n        }\n\n        message += labelText + \" (value \" + cb.value + \")\";\n      }\n\n      checkOut.textContent = message;\n    }\n\n    document.querySelectorAll('input[name=\"grp1\"]').forEach(radio => {\n      radio.addEventListener(\"change\", updateRadioMessage);\n    });\n\n    updateRadioMessage();\n  </script>\n</body>\n</html>","position":{"start":{"line":9,"column":1},"end":{"line":126,"column":1}},"key":"aHmU3Qcvhj"},{"type":"heading","depth":2,"position":{"start":{"line":128,"column":1},"end":{"line":128,"column":1}},"children":[{"type":"text","value":"Document.querySelector","position":{"start":{"line":128,"column":1},"end":{"line":128,"column":1}},"key":"XIRoXCDqlt"}],"identifier":"document-queryselector","label":"Document.querySelector","html_id":"document-queryselector","implicit":true,"key":"Sqwxv7Ro6M"},{"type":"paragraph","position":{"start":{"line":130,"column":1},"end":{"line":130,"column":1}},"children":[{"type":"inlineCode","value":"document.querySelector(...)","position":{"start":{"line":130,"column":1},"end":{"line":130,"column":1}},"key":"lAsnCkUYeS"},{"type":"text","value":" is the browser’s “find me the first matching thing” function.","position":{"start":{"line":130,"column":1},"end":{"line":130,"column":1}},"key":"Y7kd02tPTi"}],"key":"QiPBOX2pPl"},{"type":"paragraph","position":{"start":{"line":132,"column":1},"end":{"line":132,"column":1}},"children":[{"type":"text","value":"It takes a ","p